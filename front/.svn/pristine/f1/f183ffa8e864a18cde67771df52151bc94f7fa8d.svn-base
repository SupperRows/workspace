<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.open.capacity.sys.dao.SysDictDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.open.capacity.sys.model.SysDict" id="sysDictMap">
        <result property="dictId" column="dict_id"/>
        <result property="dictName" column="dict_name"/>
    </resultMap>

    <insert id="save" parameterType="com.open.capacity.sys.model.SysDict">
        insert into sys_dict(dict_id, dict_name) values (#{ dictId},#{dictName})
    </insert>

    <update id="update" parameterType="com.open.capacity.sys.model.SysDict">
        update sys_dict
        <set>
            <if test="dictId != null">
                dict_id = #{dictId},
            </if>
            <if test="dictName != null">
                dict_name = #{dictName},
            </if>
        </set>
        where dict_id = #{dictId}
    </update>

    <delete id="delete" parameterType="java.lang.String" flushCache="true">
        delete from sys_dict where dict_id = #{dictId}
    </delete>

    <select id="findAll" resultType="com.open.capacity.sys.model.SysDict">
        select * from sys_dict t
        <include refid="where"/>
    </select>
    <sql id="where">
        <where>
            <if test="searchKey != null and searchKey != '' and searchKey=='dictId'">
                and t.dict_id like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='dictName'">
                and t.dict_name like concat('%', #{searchValue}, '%')
            </if>
        </where>
    </sql>
</mapper>