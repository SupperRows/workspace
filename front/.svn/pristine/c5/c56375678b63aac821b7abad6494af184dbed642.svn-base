<html xmlns:th="http://www.thymeleaf.org">
<body>
<div>
    <form enctype="multipart/form-data" id="upload_form" method="POST">
        <table>
            <tr>
                <td>File1 to upload:</td>
                <td><input name="file1" type="file"/></td>
            </tr>
            <tr>
                <td>File2 to upload:</td>
                <td><input name="file2" type="file"/></td>
            </tr>
            <tr>
                <td></td>
                <td><input onclick="uploadImage()" type="button" value="上传文件"/></td>
            </tr>
        </table>
    </form>
</div>
</body>
<script src="/js/jquery-1.8.3.min.js" type="text/javascript"></script>
<script src="/js/jquery.form.js" type="text/javascript"></script>
<script type="text/javascript">
    function uploadImage() {
        $("#upload_form").ajaxSubmit({
            url: "/files-anon",
            type: 'post',
            dataType: 'json',
            asyn: false,
            success: function (data) {
                if (data.code != '10000') {
                    alert(JSON.stringify(data));
                    return;
                }
                alert(JSON.stringify(data));
            }
        });
    }
</script>
</html>
