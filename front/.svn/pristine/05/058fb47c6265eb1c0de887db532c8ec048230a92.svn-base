<div class="layui-card">
    <div class="layui-card-body">
        <div class="layui-form toolbar">
            搜索：
            <input id="classfiyTb-edit-value" class="layui-input search-input" autocomplete="off" type="text"
                   placeholder="输入关键字"/>&emsp;
            <button id="classfiyTb-btn-search" class="layui-btn icon-btn"><i class="layui-icon">&#xe615;</i>搜索
            </button>
            <button id="classfiyTb-btn-add" class="layui-btn icon-btn layui-btn-warm"><i class="layui-icon">&#xe654;</i>添加分类
            </button>
        </div>

        <!-- 数据表格 -->
        <table class="layui-table" id="classfiyTb-table" lay-filter="classfiyTb-table"></table>
    </div>
</div>

<!-- 表格操作列 -->
<script type="text/html" id="classfiyTb-table-bar">
    <button id="brands-btn-edit" class="layui-btn layui-btn-primary layui-btn-xs" lay-event="edit">修改</button>
    <button id="brands-btn-del" class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</button>
</script>

<!-- 表格状态列 -->
<script id="classfiy-tpl-state" type="text/html">
    <input type="checkbox" lay-filter="classfiy-tpl-state" value="{{d.classfiyId}}" lay-skin="switch" lay-text="显示|隐藏"
           {{d.isShow==1?'checked':''}}/>
</script>

<!-- 表单弹窗 -->
<script type="text/html" id="classfiyTb-model">
    <form id="classfiyTb-form" lay-filter="classfiyTb-form" class="layui-form model-form">
        <div class="layui-form-item">
            <label class="layui-form-label">上级分类</label>
            <div class="layui-input-block">
                <select id="classfiy-parentId" name="classfiy-parentId">
                    <option value="0">一级分类</option>
                </select>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">分类名称</label>
            <div class="layui-input-block">
                <input type="text" name="classfiyName" autocomplete="off"
                       placeholder="请输入分类名称" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">分类图片</label>
            <div class="layui-input-block">
                <input name="classfiy-img" placeholder="请输入图片链接" type="text"
                       class="layui-input" autocomplete="off"
                       lay-verify="required" required/>
            </div>
        </div>
        <div class="layui-form-item model-form-footer">
            <div class="layui-upload-list">
                <img class="layui-upload-img" id="classfiy-img">
            </div>
            <button class="layui-btn" id="upload-img" type="button">本地上传</button>
        </div>
    </form>
</script>

<script>
    layui.use(['form', 'table', 'upload', 'util', 'config', 'admin', 'formSelects', 'treetable'], function () {
        var form = layui.form;
        var table = layui.table;
        var config = layui.config;
        var $ = layui.jquery
            , upload = layui.upload;
        var layer = layui.layer;
        var util = layui.util;
        var admin = layui.admin;
        var formSelects = layui.formSelects;
        var treetable = layui.treetable;
        //渲染表格
        var renderTable = function () {
            layer.load(2);
            treetable.render({
                treeColIndex: 1,
                treeSpid: 0,
                treeIdName: 'classfiyId',
                treePidName: 'parentId',
                treeDefaultClose: true,
                elem: '#classfiyTb-table',
                url: config.base_server + 'api-user/classfiy/list',
                where: {
                    access_token: config.getToken().access_token
                },
                page: false,
                cols: [[
                    {type: 'numbers'},
                    {field: 'classfiyName', title: '分类名称'},
                    {
                        field: 'imgUrl', align: 'center', title: '分类图片',
                        templet: function (d) {
                            if (d.imgUrl != null) {
                                let res = '<a href="' + d.imgUrl + '" target="_blank" title="点击查看大图"><img width="40px" height="40px" src="' + d.imgUrl + '"/></a>'
                                return res;
                            } else {
                                return '';
                            }
                        }
                    },
                    {
                        field: 'isMenu', align: 'center', templet: function (d) {
                            if (d.parentId == '0') {
                                return '<span class="layui-badge layui-bg-blue">一级分类</span>';
                            } else {
                                return '<span class="layui-badge-rim">子级分类</span>';
                            }
                        }, title: '类型'
                    },
                    {field: 'isShow', sort: true, templet: '#classfiy-tpl-state', title: '是否显示', width: 150},
                    {field: 'updateTime', align: 'center', width: 180, title: '更新时间'},
                    {field: 'createTime', align: 'center', width: 180, title: '创建时间'},
                    {align: 'center', toolbar: '#classfiyTb-table-bar', title: '操作', width: 180}
                ]],
                done: function () {
                    //关闭加载
                    $(".layui-table-cell").css("height", "auto");
                    layer.closeAll('loading');
                }
            });
        }

        renderTable();

        // 添加按钮点击事件
        $('#classfiyTb-btn-add').click(function () {
            doSave();
        });

        // 工具条点击事件
        table.on('tool(classfiyTb-table)', function (obj) {
            var data = obj.data;
            if (obj.event === 'edit') { //修改
                doUpdate(data);
            } else if (obj.event === 'del') { //删除
                doDelete(obj);
            }
        });

        // 搜索按钮点击事件
        $('#classfiyTb-btn-search').click(function () {
            var keyword = $('#classfiyTb-edit-value').val();
            var searchCount = 0;
            $('#classfiyTb-table').next('.treeTable').find('.layui-table-body tbody tr td').each(function () {
                $(this).css('background-color', 'transparent');
                var text = $(this).text();
                if (keyword != '' && text.indexOf(keyword) >= 0) {
                    $(this).css('background-color', 'rgba(250,230,160,0.5)');
                    if (searchCount == 0) {
                        $('.layui-tab-item.layui-show').stop(true);
                        $('.layui-tab-item.layui-show').animate({scrollTop: $(this).offset().top - 150}, 500);
                    }
                    searchCount++;
                }
            });
            if (keyword != '' && searchCount == 0) {
                layer.msg("没有匹配结果", {icon: 5, time: 500});
            } else {
                treetable.expandAll('#classfiyTb-table');
            }
        });

        // 删除
        var doDelete = function (obj) {
            layer.confirm('确定要删除吗？', function (i) {
                layer.close(i);
                layer.load(2);
                const reqdata = {
                    classfiyId: obj.data.classfiyId,
                    dataFlag: 0
                }
                admin.req('api-user/classfiy/update', JSON.stringify(reqdata), function (data) {
                    layer.closeAll('loading');
                    if (data.code == 0) {
                        layer.msg(data.msg, {icon: 1, time: 500});
                        obj.del();
                    } else {
                        layer.msg(data.msg, {icon: 2, time: 500});
                    }
                }, 'POST');
            });
        };

        //编辑
        var doUpdate = function (data) {
            var parentId = data.parentId
            layer.open({
                type: 1,
                area: ['40%'],
                title: ['编辑分类信息'],
                btn: ['保存', '取消'],
                shadeClose: true,
                btnAlign: 'c',
                shade: 0.5,
                content: $('#classfiyTb-model').html(),
                success: function (layero, index) {
                    // 获取一级菜单
                    layer.load(2);
                    admin.req('api-user/classfiy/list', {}, function (data) {
                        layer.closeAll('loading');
                        if (0 == data.code) {
                            $.each(data.data, function (index, item) {
                                if (this.parentId == '0') {
                                    $('#classfiy-parentId').append(new Option(item.classfiyName, item.classfiyId));//往下拉菜单里添加元素
                                }
                            })
                            $("#classfiy-parentId").val(parentId);
                        } else {
                            layer.msg('获取一级菜单', {icon: 2, time: 500});
                        }
                    }, 'GET');
                    form.render();
                    $("input[name='classfiyName']").val(data.classfiyName);
                    $("input[name='classfiy-img']").val(data.imgUrl);
                    //普通图片上传
                    var uploadInst = upload.render({
                        elem: '#upload-img',
                        url: config.base_server + 'api-file/files-anon',
                        accept: 'file',
                        auto: true,
                        before: function (obj) {
                            //预读本地文件示例，不支持ie8
                            layer.load(); //上传loading
                            this.data = {access_token: config.getToken().access_token};
                            //预读本地文件示例，不支持ie8
                            obj.preview(function (index, file, result) {
                                $('#classfiy-img').attr('src', result).attr('width', '50px').attr('height', '50px');
                            });
                        },
                        done: function (res) {
                            $("input[name='classfiy-img']").val(res.url);
                            layer.closeAll('loading');
                        },
                        error: function () {
                            layer.closeAll('loading');
                            //演示失败状态，并实现重传
                            var demoText = $('#demoText');
                            demoText.html('<span style="color: #FF5722;">上传失败</span> <a class="layui-btn layui-btn-xs demo-reload">重试</a>');
                            demoText.find('.demo-reload').on('click', function () {
                                uploadInst.upload();
                            });
                        }
                    });
                },
                yes: function (index, layero) {
                    const parentId = $("#classfiy-parentId").val();
                    const classfiyName = $("input[name='classfiyName']").val();
                    const imgUrl = $("input[name='classfiy-img']").val();
                    if (classfiyName == '') {
                        layer.msg("请先输入分类名称!", {});
                    } else if (imgUrl == '') {
                        layer.msg("请先上传图片!", {});
                    } else {
                        const reqdata = {
                            classfiyId: data.classfiyId,
                            parentId: parentId,
                            classfiyName: classfiyName,
                            imgUrl: imgUrl
                        }
                        admin.req('api-user/classfiy/update', JSON.stringify(reqdata), function (res) {
                            if (res.code == 0) {
                                layer.alert(res.msg, {
                                    icon: 1,
                                    title: '提示'
                                }, function (i) {
                                    layer.close(i);
                                    layer.close(index); // 关闭弹出层
                                    $("#classfiy-form")[0].reset() // 重置form
                                })
                                renderTable();
                            } else {
                                layer.msg(res.msg, {
                                    icon: 5
                                });
                            }
                        }, "POST")
                    }
                }
            });
        }

        //添加
        var doSave = function () {
            layer.open({
                type: 1,
                title: '添加分类信息',
                shadeClose: true,
                area: ['40%'],
                btnAlign: 'c',
                content: $('#classfiyTb-model').html(),
                btn: ['确定', '取消'],
                success: function (index, layero) {
                    // 获取一级菜单
                    layer.load(2);
                    admin.req('api-user/classfiy/list', {}, function (data) {
                        layer.closeAll('loading');
                        if (0 == data.code) {
                            $.each(data.data, function (index, item) {
                                if (this.parentId == '0') {
                                    $('#classfiy-parentId').append(new Option(item.classfiyName, item.classfiyId));//往下拉菜单里添加元素
                                }
                            })
                        } else {
                            layer.msg('获取一级菜单', {icon: 2, time: 500});
                        }
                    }, 'GET');
                    form.render();
                    //普通图片上传
                    var uploadInst = upload.render({
                        elem: '#upload-img',
                        url: config.base_server + 'api-file/files-anon',
                        accept: 'file',
                        auto: true,
                        before: function (obj) {
                            //预读本地文件示例，不支持ie8
                            layer.load(); //上传loading
                            this.data = {access_token: config.getToken().access_token};
                            //预读本地文件示例，不支持ie8
                            obj.preview(function (index, file, result) {
                                $('#classfiy-img').attr('src', result).attr('width', '50px').attr('height', '50px');
                            });
                        },
                        done: function (res) {
                            $("input[name='classfiy-img']").val(res.url);
                            layer.closeAll('loading');
                        },
                        error: function () {
                            layer.closeAll('loading');
                            //演示失败状态，并实现重传
                            var demoText = $('#demoText');
                            demoText.html('<span style="color: #FF5722;">上传失败</span> <a class="layui-btn layui-btn-xs demo-reload">重试</a>');
                            demoText.find('.demo-reload').on('click', function () {
                                uploadInst.upload();
                            });
                        }
                    });
                },
                yes: function (index, layero) {
                    const parentId = $("#classfiy-parentId").val();
                    const classfiyName = $("input[name='classfiyName']").val();
                    const imgUrl = $("input[name='classfiy-img']").val();
                    if (classfiyName == '') {
                        layer.msg("请先输入分类名称!", {});
                    } else if (imgUrl == '') {
                        layer.msg("请先上传图片!", {});
                    } else {
                        const reqdata = {
                            parentId: parentId,
                            classfiyName: classfiyName,
                            imgUrl: imgUrl
                        }
                        admin.req('api-user/classfiy/save', JSON.stringify(reqdata), function (res) {
                            if (res.code == 0) {
                                layer.alert(res.msg, {
                                    icon: 1,
                                    title: '提示'
                                }, function (i) {
                                    layer.close(i);
                                    layer.close(index);
                                    $("#classfiy-form")[0].reset()
                                })
                                renderTable();
                            } else {
                                layer.msg(res.msg)
                            }
                        }, "PUT")
                    }
                }
            })
        }

        // 修改分类显示状态
        form.on('switch(classfiy-tpl-state)', function (obj) {
            layer.load(2);
            const reqdata = {
                classfiyId: obj.elem.value,
                isShow: obj.elem.checked == true ? 1 : 0
            }
            admin.req('api-user/classfiy/update', JSON.stringify(reqdata), function (data) {
                layer.closeAll('loading');
                if (data.code == 0) {
                    layer.msg(data.msg, {icon: 1, time: 500});
                } else {
                    layer.msg(data.msg, {icon: 2, time: 500});
                    $(obj.elem).prop('checked', !obj.elem.checked);
                    form.render('checkbox');
                }
            }, 'POST');
        })
    });

</script>