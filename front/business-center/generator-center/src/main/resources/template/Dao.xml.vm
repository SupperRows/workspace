<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="${package}.${pkgName}.dao.${className}Dao">

    <resultMap type="${package}.${pkgName}.entity.${className}" id="${classname}Map">
        #foreach($column in $columns)
            <result property="${column.attrname}" column="${column.columnName}"/>
        #end
    </resultMap>

    <insert id="save" parameterType="${package}.${pkgName}.entity.${className}">
        insert into ${tableName}(
    #foreach($column in $columns)
        #if( $!{velocityCount} == $!{columns.size()})
            ${column.columnName}
        #else
            ${column.columnName},
                    #end
    #end
      ) values (
        #foreach($column in $columns)
        #if( $!{velocityCount} == $!{columns.size()})
               #{${column.attrname}}
               #else
               #{ ${column.attrname}},
            #end
    #end
      )
    </insert>

    <update id="update" parameterType="${package}.${pkgName}.entity.${className}">
        update ${tableName}
        <set>
            #foreach($column in $columns)
                <if test="${column.attrname} != null">
                    ${column.columnName} = #{${column.attrname}},
                </if>
            #end
        </set>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="long" flushCache="true">
        delete from ${tableName} where id = #{id}
    </delete>

    <select id="findAll" parameterType="map" resultMap="${classname}Map">
        select * from ${tableName} t
        <include refid="where"/>
    </select>
    <sql id="where">
        <where>
            #foreach($column in $columns)
                <if test="searchKey != null and searchKey != '' and searchKey=='${column.attrname}'">
                    and t.${column.columnName} like concat('%', #{searchValue}, '%')
                </if>
            #end
        </where>
    </sql>
</mapper>