<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.open.capacity.user.dao.UserDao">

    <resultMap type="com.open.capacity.user.model.User" id="userMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="openId" column="open_id"/>
        <result property="userName" column="user_name"/>
        <result property="userGender" column="user_gender"/>
        <result property="userCity" column="user_city"/>
        <result property="userBirthday" column="user_birthday"/>
        <result property="userCountry" column="user_country"/>
        <result property="userProvince" column="user_province"/>
        <result property="userAvatarurl" column="user_avatarUrl"/>
        <result property="createTime" column="create_time"/>
        <result property="dataFlag" column="data_flag"/>
    </resultMap>

    <insert id="save" parameterType="com.open.capacity.user.model.User">
        insert into user(id,user_id,open_id,user_name,user_gender,user_city,user_birthday,user_country,user_province,user_avatarUrl,create_time)
                  values (#{ id},#{userId},#{ openId},#{ userName},#{ userGender},#{ userCity},#{ userBirthday},#{ userCountry},#{ userProvince},#{ userAvatarurl},now())
    </insert>

    <update id="update" parameterType="com.open.capacity.user.model.User">
        update user
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="openId != null">
                open_id = #{openId},
            </if>
            <if test="userName != null">
                user_name = #{userName},
            </if>
            <if test="userGender != null">
                user_gender = #{userGender},
            </if>
            <if test="userCity != null">
                user_city = #{userCity},
            </if>
            <if test="userBirthday != null">
                user_birthday = #{userBirthday},
            </if>
            <if test="userCountry != null">
                user_country = #{userCountry},
            </if>
            <if test="userProvince != null">
                user_province = #{userProvince},
            </if>
            <if test="userAvatarurl != null">
                user_avatarUrl = #{userAvatarurl},
            </if>
            <if test="dataFlag != null">
                data_flag = #{dataFlag}
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="long" flushCache="true">
        delete from user where id = #{id}
    </delete>

    <select id="findAll" parameterType="map" resultMap="userMap">
        select * from user t
        <include refid="where"/>
    </select>
    <sql id="where">
        <where>
            <if test="searchKey != null and searchKey != '' and searchKey=='id'">
                and t.id like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='openId'">
                and t.open_id = #{searchValue}
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='userName'">
                and t.user_name like concat('%', #{searchValue}, '%')
            </if>
            <if test="userGender != null and userGender != ''">
                and t.user_gender = #{userGender}
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='userCity'">
                and t.user_city like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='userBirthday'">
                and t.user_birthday like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='userCountry'">
                and t.user_country like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='userProvince'">
                and t.user_province like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='userAvatarurl'">
                and t.user_avatarUrl like concat('%', #{searchValue}, '%')
            </if>
            <if test="createTime != null and createTime != ''">
                and t.create_time between substring_index(#{createTime}, ' - ', 1) and substring_index(#{createTime}, '
                - ', -1)
            </if>
            and t.data_flag = 1
        </where>
    </sql>
</mapper>