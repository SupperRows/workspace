<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.open.capacity.sys.dao.SysDictTreeDao">

    <resultMap type="com.open.capacity.sys.model.SysDictTree" id="sysDictTreeMap">
        <result property="dictId" column="dict_id"/>
        <result property="dictName" column="dict_name"/>
        <result property="parentId" column="parent_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="creatorId" column="creator_id"/>
        <result property="creator" column="creator"/>
        <result property="remark" column="remark"/>
        <result property="updator" column="updator"/>
        <result property="del" column="del"/>
    </resultMap>

    <insert id="save" parameterType="com.open.capacity.sys.model.SysDictTree">
        insert into sys_dict_tree(dict_id,dict_name,parent_id,create_time,creator_id,creator,remark)
                values (#{ dictId},#{ dictName},#{ parentId},NOW(),#{ creatorId},#{ creator},#{ remark})
    </insert>

    <update id="update" parameterType="com.open.capacity.sys.model.SysDictTree">
        update sys_dict_tree
        <set>
            <if test="dictId != null">
                dict_id = #{dictId},
            </if>
            <if test="dictName != null">
                dict_name = #{dictName},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="creatorId != null">
                creator_id = #{creatorId},
            </if>
            <if test="creator != null">
                creator = #{creator},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="updator != null">
                updator = #{updator},
            </if>
            <if test="del != null">
                del = #{del},
            </if>
            update_time = NOW()
        </set>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="String" flushCache="true">
        delete from sys_dict_tree where id = #{id}
    </delete>

    <select id="findAll" parameterType="map" resultMap="sysDictTreeMap">
        select * from sys_dict_tree t
        <include refid="where"/>
    </select>
    <sql id="where">
        <where>
            <if test="searchKey != null and searchKey != '' and searchKey=='dictId'">
                and t.dict_id like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='dictName'">
                and t.dict_name like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='parentId'">
                and t.parent_id like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='createTime'">
                and t.create_time like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='updateTime'">
                and t.update_time like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='creatorId'">
                and t.creator_id like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='creator'">
                and t.creator like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='remark'">
                and t.remark like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='updator'">
                and t.updator like concat('%', #{searchValue}, '%')
            </if>
            and t.del = 1
        </where>
    </sql>
</mapper>