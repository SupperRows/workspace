<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.open.capacity.sys.dao.SysDictDetailDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.open.capacity.sys.model.SysDictDetail" id="sysDictDetailMap">
        <result property="id" column="id"/>
        <result property="dictId" column="dict_id"/>
        <result property="value" column="value"/>
        <result property="label" column="label"/>
        <result property="type" column="type"/>
        <result property="description" column="description"/>
        <result property="createTime" column="create_time"/>
        <result property="lastUpdateTime" column="last_update_time"/>
        <result property="remarks" column="remarks"/>
    </resultMap>

    <insert id="save" parameterType="com.open.capacity.sys.model.SysDictDetail">
        insert into sys_dict_detail(id,dict_id,value,label,type,description,create_time,remarks)
        values (#{ id},#{ dictId},#{ value},#{ label},#{ type},#{ description},NOW(),#{remarks})
    </insert>

    <update id="update" parameterType="com.open.capacity.sys.model.SysDictDetail">
        update sys_dict_detail
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="dictId != null">
                dict_id = #{dictId},
            </if>
            <if test="value != null">
                value = #{value},
            </if>
            <if test="label != null">
                label = #{label},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="remarks != null">
                remarks = #{remarks},
            </if>
            last_update_time = now(),
        </set>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="long" flushCache="true">
        delete from sys_dict_detail where id = #{id}
    </delete>

    <delete id="deleteByDictId" parameterType="java.lang.String" flushCache="true">
        delete from sys_dict_detail where  dict_id = #{ dictId}
    </delete>

    <select id="findAll" resultType="com.open.capacity.sys.model.SysDictDetail">
        select * from sys_dict_detail t
        <include refid="where"/>
    </select>

    <select id="findByDictId" parameterType="java.lang.String" resultMap="sysDictDetailMap">
        select * from sys_dict_detail t
        <where>
            dict_id = #{ dictId}
        </where>
    </select>
    <sql id="where">
        <where>
            <if test="searchKey != null and searchKey != '' and searchKey=='id'">
                and t.id like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='dictId'">
                and t.dict_id like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='value'">
                and t.value like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='label'">
                and t.label like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='type'">
                and t.type like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='description'">
                and t.description like concat('%', #{searchValue}, '%')
            </if>
            <if test="searchKey != null and searchKey != '' and searchKey=='remarks'">
                and t.remarks like concat('%', #{searchValue}, '%')
            </if>
        </where>
    </sql>
</mapper>